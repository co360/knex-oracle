{
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": 11
  },
  "env": {
    "browser": true,
    "node": true,
    "commonjs": true
  },
  "globals": {
    "__DEV__": true
  },
  "rules": {
    "arrow-body-style": [2, "as-needed"],
    "comma-dangle": 0,
    "consistent-return": 0,
    "func-names": 0,
    "global-require": 0,
    "import": 0,
    "import/extensions": 0,
    "import/no-extraneous-dependencies": 0,
    "import/prefer-default-export": 0,
    "linebreak-style": 0,
    "max-len": 0,
    "no-console": 0,
    "no-alert": 0,
    "no-param-reassign": [
      2,
      {
        "props": false
      }
    ],
    "no-restricted-globals": ["off", "confirm"],
    "no-underscore-dangle": 0,
    "no-unused-vars": [
      1,
      {
        "ignoreSiblings": true,
        "argsIgnorePattern": "res|next|^err"
      }
    ],
    "no-use-before-define": ["error", { "variables": false }],
    "no-shadow": [
      2,
      {
        "hoist": "all",
        "allow": ["resolve", "reject", "done", "next", "err", "error"]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "trailingComma": "all",
        "singleQuote": true,
        "printWidth": 120,
        "useTabs": false,
        "tabWidth": 2
      }
    ],
    "quotes": [
      2,
      "single",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "radix": 0,
    "space-before-function-parent": 0
  }
}
